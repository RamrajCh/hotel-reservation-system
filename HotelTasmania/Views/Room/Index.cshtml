@model IEnumerable<HotelTasmania.Models.Room>

@{
    ViewData["Title"] = "Room List";
}

<div class="wrap-table">
<h2 class="text-center"> Room List </h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerNight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfBeds)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PricePerNight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Floor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfBeds)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RoomId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RoomId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>

